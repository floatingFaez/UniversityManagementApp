@model IEnumerable<UniversityManagementSystemApp.Models.Course>

    @{
        ViewBag.Title = "Index";
    }
    <p> <br/></p>
    @using (Html.BeginForm())
    {
        @Html.ActionLink("Create New", "Create" , new {@class="btn btn-primary"})
        @Html.DropDownList("departmentId", null, "--Select--" , htmlAttributes: new{ @class="form-control"})
    }
    <script type="text/javascript">
        function FillData(id) {
            $("#section-data").load("Courses/FilteredSection", { deptId: id });
        }
        $(function () {
            $("#departmentId").change(function () {
                var id = $("#departmentId").val();
                FillData(id);
            });
        });
    </script>
    <br/>
    <div id="section-data">
        @Html.Partial("~/Views/Shared/_FilteredSection.cshtml", Model)
    </div>
   